{
  "manifest_version": 3,
  "name": "GoTo - Fast Tab, Bookmark & History Search",
  "short_name": "GoTo",
  "version": "1.2.0",
  "description": "Lightning-fast search for tabs, bookmarks, and history. Navigate your browser efficiently with a minimalist interface.",
  "homepage_url": "https://github.com/exiahuang/goto-chrome-extension",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "tabs",
    "history",
    "bookmarks",
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_title": "GoTo",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Command+M"
      },
      "description": "Toggle search window"
    }
  },
  "offline_enabled": true
}